{
  "name": "polymarket-pnl-indexer",
  "version": "1.0.0",
  "description": "Subsquid indexer for Polymarket PnL calculation with ClickHouse",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --import tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "codegen": "squid-evm-typegen src/abi ./abi/*.json --clean",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "pnl": "tsx src/calculate-pnl.ts",
    "ledger": "tsx src/build-ledger.ts",
    "backfill": "tsx src/backfill-ledger.ts",
    "snapshot:scheduler": "tsx src/snapshot-scheduler.ts",
    "pnl:snapshots": "tsx src/pnl-from-snapshots.ts",
    "reconcile": "tsx src/reconcile-balances.ts",
    "api": "tsx src/api.ts"
  },
  "dependencies": {
    "@clickhouse/client": "^1.14.0",
    "@subsquid/evm-abi": "^0.3.1",
    "@subsquid/evm-processor": "^1.19.0",
    "clickhouse-subsquid-store": "^0.1.3",
    "dotenv": "^16.4.5",
    "ethers": "^6.12.0"
  },
  "devDependencies": {
    "@subsquid/evm-typegen": "^4.2.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
